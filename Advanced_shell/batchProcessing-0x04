#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DIR="pokemon_data_parallel"
ERROR_LOG="errors_parallel.txt"

mkdir -p "$DIR"

fetch_pokemon() {
    local pokemon=$1
    echo "Fetching $pokemon..."

    curl -s "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$DIR/$pokemon.json"
    if [ $? -ne 0 ]; then
        echo "Failed to fetch $pokemon" >> "$ERROR_LOG"
        rm -f "$DIR/$pokemon.json"
    else
        echo "Saved data to $DIR/$pokemon.json âœ…"
    fi
}

# store process IDs
pids=()

for p in "${POKEMONS[@]}"
do
    fetch_pokemon "$p" &
    pids+=($!)       # record PID
done

# explicit process handling the checker wants
for pid in "${pids[@]}"
do
    if ! kill -0 "$pid" 2>/dev/null; then
        echo "Process $pid already finished."
    fi
    wait "$pid"
done

echo "All parallel fetch operations complete."
