#!/bin/bash

# Ensure data.json exists
if [ ! -f "data.json" ]; then
    echo "data.json not found. Run Task 0 first."
    exit 1
fi

# Extract fields using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
height_raw=$(jq '.height' data.json)
weight_raw=$(jq '.weight' data.json)
type_raw=$(jq -r '.types[0].type.name' data.json)

# Convert height decimeters -> meters (0.4m)
height=$(awk -v h="$height_raw" 'BEGIN { printf "%.1f", h / 10 }')

# Convert weight hectograms -> kg (6kg)
weight=$(awk -v w="$weight_raw" 'BEGIN { printf "%.0f", w / 10 }')

# Capitalize type
type=$(echo "$type_raw" | sed 's/.*/\u&/')

echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
