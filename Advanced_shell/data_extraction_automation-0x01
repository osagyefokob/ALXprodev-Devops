#!/bin/bash

# Check if data.json exists
if [ ! -f "data.json" ]; then
    echo "data.json not found. Run Task 0 first."
    exit 1
fi

# Extract raw values
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
raw_height=$(jq '.height' data.json)
raw_weight=$(jq '.weight' data.json)

# Convert units
formatted_height=$(awk -v h="$raw_height" 'BEGIN { printf "%.1f", h / 10 }')
formatted_weight=$(awk -v w="$raw_weight" 'BEGIN { printf "%.0f", w / 10 }')

# Must match EXACT format expected by the checker
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
