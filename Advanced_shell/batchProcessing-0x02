#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DIR="pokemon_data"
ERROR_LOG="errors.txt"

mkdir -p "$DIR"

# Function to fetch data with retry logic
fetch_pokemon() {
    local pokemon=$1
    local attempt=1
    local max_attempts=3

    echo "Fetching data for $pokemon..."

    while [ $attempt -le $max_attempts ]
    do
        response=$(curl -s -w "%{http_code}" -o "$DIR/$pokemon.json" \
            "https://pokeapi.co/api/v2/pokemon/$pokemon")

        status="${response:(-3)}"

        if [ "$status" -eq 200 ]; then
            echo "Saved data to $DIR/$pokemon.json ✅"
            return
        else
            echo "Attempt $attempt failed for $pokemon (Status: $status)"
            attempt=$(( attempt + 1 ))
            sleep 1
        fi
    done

    # Log error after all retries failed
    echo "Failed to fetch $pokemon after 3 attempts" >> "$ERROR_LOG"
    rm -f "$DIR/$pokemon.json"
}

# Loop through Pokémon
for p in "${POKEMONS[@]}"
do
    fetch_pokemon "$p"
done
